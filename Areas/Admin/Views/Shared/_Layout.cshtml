<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" style="background-color: #e3f2fd;">
        @Html.ActionLink("Панель администратора", "Index", "Pages", "", new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Страницы", "Index", "Pages", "", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Боковая панель", "EditSidebar", "Pages", "", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Категории", "Categories", "Shop", "", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Товары", "Products", "Shop", "", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                @Html.ActionLink("Пользователи", "Index", "Pages", "", new { @class = "nav-link" })
                </li>
            </ul>

            <!--New right menu-->
            <ul class="navbar-nav ms-auto">
                <li>
                    <a href="/" class="navbar-brand" target="_blank">Страница пользователя</a>
                </li>
            </ul>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ckeditor")
    @RenderSection("scripts", required: false)
</body>
</html>
